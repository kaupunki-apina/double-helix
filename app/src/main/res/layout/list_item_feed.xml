<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="articleViewModel"
            type="fi.tomy.salminen.doublehelix.service.persistence.viewmodel.ArticleViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_l"
        android:layout_marginVertical="@dimen/margin_s">

        <ImageView
            android:id="@+id/feed_item_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/feed_item_title"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_marginLeft="@dimen/margin_s"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text='@{articleViewModel.title}'
            tools:text="Title"
            app:layout_constraintTop_toTopOf="@id/feed_item_image"
            app:layout_constraintLeft_toRightOf="@id/feed_item_image"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>