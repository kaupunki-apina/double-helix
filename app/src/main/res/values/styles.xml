<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Base app colors -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <!-- Extended app colors -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorOnSecondary">@color/primaryTextColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>

        <!-- Text styling -->
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>
        <item name="android:textColorTertiary">@color/tertiaryTextColor</item>
        <item name="android:textColorPrimaryInverse">@color/primaryTextColor</item>
        <item name="android:textColorSecondaryInverse">@color/secondaryTextColor</item>
        <item name="android:textColorTertiaryInverse">@color/tertiaryTextColor</item>
        <item name="android:fontFamily">@font/open_sans</item>

        <!-- Component styles -->
        <!-- System components -->
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Support library components -->
        <item name="actionBarTheme">@style/AppTheme.ActionBar</item>
        <item name="floatingActionButtonStyle">@style/AppTheme.FloatingActionButton</item>
    </style>

    <style name="AppTheme.ActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <!-- Override background drawable once supported -->
    </style>
    <style name="AppTheme.AppBarOverlay" parent="AppTheme"/>
    <style name="AppTheme.PopupOverlay" parent="AppTheme"/>
</resources>
